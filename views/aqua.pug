extends layout

block content
  h1= title
  p Welcome to Assignment 10
  div(class="container-fluid")
        div(class="row")
            -
                let aqua = results
            each k,index in aqua
                div(class="col-sm-2" onclick=`buy(${index})`) #{k.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{k.type}
                div(class="col-sm-2" onclick=`buy(${index})`) #{k.cost}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }            